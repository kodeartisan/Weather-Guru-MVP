<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_property_layout_height"
    android:orientation="vertical"
    >

  <ImageView
      android:id="@+id/img_icon"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_marginEnd="@dimen/item_property_icon_margin_right"
      android:layout_marginRight="@dimen/item_property_icon_margin_right"
      />

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_toEndOf="@+id/img_icon"
      android:layout_toRightOf="@+id/img_icon"
      android:orientation="vertical"
      >

    <TextView
        android:id="@+id/txt_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/property_item_hint_color"
        />

    <TextView
        android:id="@+id/txt_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/property_item_text_color"
        />

  </LinearLayout>

  <View
      android:id="@+id/view_bottom_line"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_alignParentBottom="true"
      android:layout_marginLeft="@dimen/item_property_line_margin_left"
      android:layout_marginStart="@dimen/item_property_line_margin_left"
      android:background="@color/property_item_line_color"
      />

</RelativeLayout>